            <button type="submit" id="submit" class="bg-yellow-800 hover:bg-yellow-900 active:bg-yellow-600 text-gray-50 text-2xl font-semibold shadow-md px-3 py-2 rounded-md my-4">Submit Order</button>
          </div>
        </div>
        
        <!-- FLAVOR SELECTION -->
        <div class="flex space-x-6">

          <!-- ESPRESSOS -->

