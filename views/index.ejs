        <button id="grande" class="size px-12 py-2 rounded-md font-semibold bg-gray-600 hover:bg-gray-500 active:bg-gray-700 transition ease-in duration-150 cursor-pointer">
          Grande
        </button>
        <button id="venti" class="size px-12 py-2 rounded-md font-semibold bg-gray-600 hover:bg-gray-500 active:bg-gray-700 transition ease-in duration-150 cursor-pointer">
          Venti
        </button>
      </div>

      

