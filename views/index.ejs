  <body class="bg-gray-900">
    <header>
      <nav class="d-flex justify-content-around py-1 bg-dark shadow-sm">
          <div class="flex">
            <a href="/"><h1 class="navbar navbar-dark bg-dark justify-content-between">Civet Coffee House</h1></a>
          </div>
          <div class="mt-2 space-x-3 text-xl">
            <span class="font-semibold text-white">Barista Panel:</span>
            <a href="/login" class="btn btn-secondary" ><span class="fa fa-user"></span> Login</a>
            <a href="/signup" class="btn btn-secondary"><span class="fa fa-user"></span> Signup</a>
          </div>
      </nav>
    </header>
    <div class="m-auto px-64 py-4">

      <!-- NAME -->
      <div class="mb-2 ">
        <label for="name" class="text-4xl text-gray-100 font-semibold">Name: </label>
        <input type="text" name="name" id="custName" class="bg-gray-200 h-10 rounded text-2xl" placeholder="Enter customer's name"></input>
      </div>

      <!-- SIZE -->

